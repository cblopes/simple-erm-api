@model SimpleERP.MVC.Models.LoginUser

@{
    ViewData["Title"] = "Login de usuário";
}


<section class="section-conten padding-y container" style="min-height:35vh">

    <div class="card mx-auto" style="max-width: 380px; margin-top: 100px;">

        <div class="card-body">
            <h4 class="card-title mb-4">Seja bem vindo!</h4>
            <vc:Summary></vc:Summary>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <!--
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" type="email" id="floatingEmail">
                    <label asp-for="Email" for="floatingEmail">E-mail</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>-->

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" asp-for="Email">
                    <label asp-for="Email" for="floatingEmail">E-mail</label>
                    <span asp-validation-for="Email" for="floatingEmail" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <input type="password" asp-for="Password" class="form-control" id="floatingPass" placeholder="Password"/>
                    <label asp-for="Password" for="floatingPass">Senha</label>
                    <span asp-validation-for="Password" for="floatingPass" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-outline-primary btn-block">Entrar</button>
                </div>
            </form>
        </div>        
    </div>

</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
