@model SimpleERP.MVC.Models.CreateClientModel

@{
    ViewData["Title"] = "Cadastrar Novo Cliente";
}

<!-- Início Breadcrumbs -->
<div class="container-flex">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb border shadow-sm p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item">
                <a class="text-dark fw-bold text-decoration-underline text-decoration-none" asp-action="Index" asp-controller="Home">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a class="text-dark fw-bold text-decoration-underline text-decoration-none" asp-action="Index" asp-controller="Client">Clientes</a>
            </li>
            <li class="breadcrumb-item active">Cadastrar Cliente</li>
        </ol>
    </nav>
</div>

<vc:summary></vc:summary> <!-- ViewComponent de erros -->

<!-- Início Card -->
<div class="row justify-content-center">
    <div class="card shadow-sm col-md-6 p-0">

        <!-- Início Card Header -->
        <div class="card-header">
            <h4 class="m-0">Cadastrar Cliente</h4>
        </div>

        <!-- Início Card Body -->
        <div class="card-body mb-3">
            <form asp-action="Create">                

                <div class="mb-3">
                    <label asp-for="CpfCnpj" class="form-label">CPF/CNPJ</label>
                    <input asp-for="CpfCnpj" type="text" class="form-control" placeholder="04656754765" required>
                    <span asp-validation-for="CpfCnpj" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nome do cliente</label>
                    <input asp-for="Name" class="form-control" placeholder="Airton Senna" required>
                    <span asp-validation-for="Name" class="form-text text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Confirmar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
