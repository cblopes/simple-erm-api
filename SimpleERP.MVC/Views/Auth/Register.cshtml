@model SimpleERP.MVC.Models.RegisterUser

@{
    ViewData["Title"] = "Criar Conta";
}

<!-- Início Breadcrumbs -->
<div class="container-flex">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb border shadow-sm p-3 bg-body-tertiary rounded-3">
            <li class="breadcrumb-item">
                <a class="text-dark fw-bold text-decoration-underline text-decoration-none" asp-action="Index" asp-controller="Home">Home</a>
            </li>
            <li class="breadcrumb-item active">Criar Conta</li>
        </ol>
    </nav>
</div>

<vc:summary></vc:summary> <!-- ViewComponent de erros -->

<!-- Início Card -->
<div class="row justify-content-center">
    <div class="card shadow-sm col-md-6 p-0">

        <!-- Início Card Header -->
        <div class="card-header">
            <h4 class="card-title m-0">Criar Conta</h4>
        </div>

        <!-- Início Card Body -->
        <div class="card-body mb-3">
            <h5 class="card-subtitle mb-3">Crie uma nova conta</h5>

            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com">
                    <span asp-validation-for="Email" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirme sua senha</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="form-text text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <input type="submit" value="Confirmar" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
